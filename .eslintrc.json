{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true,
            "arrowFunctions": true
        },
        "sourceType": "module"
    },
    "plugins": ["async-await", "react/recommended"],
    "rules": {
        "no-const-assign": "warn",
        "no-this-before-super": "warn",
        "no-undef": "warn",
        "no-unreachable": "warn",
        "no-unused-vars": "warn",
        "constructor-super": "warn",
        "valid-typeof": "warn",
        "no-extra-semi":"error",
        "semi": ["error", "never"],
        "indent": ["error", 2, { "SwitchCase": 1 }],
        "no-console": "error",
        "async-await/space-after-async": 2,
        "async-await/space-after-await": 2
    }
}
